<map proto="1.4.0">
<name>Chimeric</name>
<version>1.0</version>
<objective>Destroy the other team's monument, then capture their wool and return it to your base.</objective>
<authors>
    <author uuid="f876b863-1ccd-4ae2-acad-8a09e2209e81"/>
    <!--  _DISTRACTION_  -->
    <author uuid="af56fc4a-51d2-4a6e-b020-2c6d272b9cbf"/>
    <!--  Ale  -->
</authors>
<teams>
    <team id="red" color="dark red" max="18">Red</team>
    <team id="blue" color="blue" max="18">Blue</team>
</teams>
<maxbuildheight>66</maxbuildheight>
<spawns>
    <spawn team="red" kit="red" yaw="-90">
        <cylinder base="-80,8.5,0" radius="1" height="1"/>
    </spawn>
    <spawn team="blue" kit="blue" yaw="90">
        <cylinder base="80,8.5,0" radius="1" height="1"/>
    </spawn>
    <default yaw="180">
        <cylinder base="0,85.5,3" radius="2" height="1"/>
    </default>
</spawns>
<kits>
    <kit name="spawn">
        <item slot="0">stone sword</item>
        <item slot="1" enchantment="arrow infinite:1">bow</item>
        <item slot="2">stone pickaxe</item>
        <item slot="3">stone axe</item>
        <item slot="4" amount="32" name="`eChicken `for `cFish">cooked fish</item>
        <item slot="5" amount="2">golden apple</item>
        <item slot="6" amount="32">log</item>
        <item slot="7" amount="32">glass</item>
        <item slot="28">arrow</item>
        <potion duration="5" amplifier="4">regeneration</potion>
    </kit>
    <kit name="blue" parents="spawn">
        <helmet color="0066cc">leather helmet</helmet>
        <chestplate color="0066cc">leather chestplate</chestplate>
        <leggings color="0066cc">leather leggings</leggings>
        <boots color="0066cc">leather boots</boots>
    </kit>
    <kit name="red" parents="spawn">
        <helmet color="cd0000">leather helmet</helmet>
        <chestplate color="cd0000">leather chestplate</chestplate>
        <leggings color="cd0000">leather leggings</leggings>
        <boots color="cd0000">leather boots</boots>
    </kit>
</kits>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
    <tool>stone pickaxe</tool>
    <tool>stone axe</tool>
    <tool>arrow</tool>
</toolrepair>
<itemremove>
    <item>beacon</item>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>obsidian</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>log</item>
    <item>wood</item>
    <item>glass</item>
</itemremove>
<timelock>on</timelock>
<destroyables name="Monument" repairable="false" sparks="true" show-progress="true" materials="ender_stone,emerald_block,nether_fence,stained_glass" completion="100%">
    <destroyable owner="blue">
       <region><cylinder base="47.5,19,0.5" radius="2" height="4"/></region>
    </destroyable>
    <destroyable owner="red">
       <region><cylinder base="-47.5,19,-0.5" radius="2" height="4"/></region>
    </destroyable>
</destroyables>
<wools team="red">
    <wool color="cyan" location="134,57,0">
        <monument><block>-42,9,6</block></monument>
    </wool>
</wools>
<wools team="blue">
    <wool color="magenta" location="-134,57,0">
        <monument><block>41,9,-7</block></monument>
    </wool>
</wools>
<filters>
    <filter>
        <not id="no-void">
            <void/>
        </not>
    </filter>
    <filter name="only-blue">
        <team>blue</team>
    </filter>
    <filter name="only-red">
        <team>red</team>
    </filter>
    <filter name="only-red-until-monument-gone">
        <!--Add working filter here-->
    </filter>
    <filter name="only-blue-until-monument-gone">
        <!--Add working filter here-->
    </filter>
</filters>
<regions>
    <apply enter="only-red-until-monument-gone" message="The monument must be broken before you can enter this area!">
        <region>
            <rectangle min="-oo,-oo" max="-72,oo"/>
        </region>
    </apply>
    <apply enter="only-blue-until-monument-gone" message="The monument must be broken before you can enter this area!">
        <region>
            <rectangle min="72,-oo" max="oo,oo"/>
        </region>
    </apply>
    <apply enter="only-blue" message="You may not enter the other team's wool room!">
        <region>
            <rectangle min="-oo,-oo" max="-125,oo"/>
        </region>
    </apply>
    <apply enter="only-red" message="You may not enter the other team's wool room!">
        <region>
            <rectangle min="125,-oo" max="oo,oo"/>
        </region>
    </apply>
    <apply block="no-void" message="You may not modify the void area!">
        <region>
            <union>
                <rectangle min="21,-oo" max="oo,oo"/>
                <rectangle min="-oo,-oo" max="-21,oo"/>
            </union>
        </region>
    </apply>
</regions>
